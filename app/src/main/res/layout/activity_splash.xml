<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anmol.hibiscus.SplashActivity"
    android:background="#fff"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"

        app:srcCompat="@drawable/iiit" />

    <ProgressBar
        android:id="@+id/load"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sanmol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anmol Saxena"
                android:textColor="#000"
                android:paddingTop="@dimen/textmargin"
                android:paddingBottom="@dimen/textmargin"
                android:paddingLeft="@dimen/textmargin"
                android:paddingStart="@dimen/textmargin"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:textStyle="italic"

                app:fontFamily="@font/lato_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="(B516008)"
                android:padding="@dimen/textmargin"
                app:fontFamily="@font/lato_regular" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sankit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ankit Choudhary"
                android:textColor="#000"
                android:paddingTop="@dimen/textmargin"
                android:paddingBottom="@dimen/textmargin"
                android:paddingLeft="@dimen/textmargin"
                android:paddingStart="@dimen/textmargin"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:textStyle="italic"

                app:fontFamily="@font/lato_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="(B216008)"
                android:padding="@dimen/textmargin"
                app:fontFamily="@font/lato_regular" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:text="Developed By:"
        android:padding="@dimen/textmargin"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:fontFamily="@font/lato_regular" />
</RelativeLayout>
