<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anmol.hibiscus">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FireApp"
        android:allowBackup="true"
        android:icon="@drawable/hibif"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hibif"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" >

        </activity>
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".SignupActivity" />

        <activity android:name=".Verify" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".HibiscusActivity"
            android:label="@string/title_activity_hibiscus"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>
        <activity android:name=".RoseiActivity" />
        <activity android:name=".ItsActivity" />
        <activity android:name=".Hibiscus_Login" />
        <activity android:name=".NoticeDataActivity"></activity>
        <service android:name=".services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".services.RequestService"/>
        <service android:name=".services.RequestServiceAttendance"/>
        <service android:name=".services.RequestServiceGrades"/>
        <service android:name=".services.RequestServiceCourses"/>

    </application>

</manifest>